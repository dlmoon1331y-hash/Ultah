<div id="page5" class="page">
    <h1 id="penutup"></h1>
    <canvas id="confetti"></canvas>
</div>

<script>
let data = {};

function nextPage(page) {
    document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
    document.getElementById('page' + page).classList.add('active');

    if (page === 2) {
        data.nama = document.getElementById('nama').value;
    } else if (page === 3) {
        data.makanan = document.getElementById('makanan').value;
    } else if (page === 4) {
        data.umur = document.getElementById('umur').value;
        document.getElementById('ucapan').textContent = 
            `Selamat ulang tahun ${data.nama}! Semoga di umur ${data.umur}, kamu  makannanmu ${data.makanan} tetap sama 🎉`;
    } else if (page === 5) {
        document.getElementById('penutup').textContent =
            `Semoga ${data.nama} panjang umur, sehat selalu, menjadi pribadi yang lebih baik, dan bahagia selalu
              💖🎂`;

        startConfetti();
    }
}

// Confetti effect
const confetti = document.getElementById('confetti');
const ctx = confetti.getContext('2d');
confetti.width = window.innerWidth;
confetti.height = window.innerHeight;

let confettiPieces = [];
for (let i = 0; i < 100; i++) {
    confettiPieces.push({
        x: Math.random() * confetti.width,
        y: Math.random() * confetti.height - confetti.height,
        r: Math.random() * 6 + 4,
        d: Math.random() * 10 + 5,
        color: `hsl(${Math.random() * 360}, 100%, 50%)`,
        tilt: Math.random() * 10 - 10
    });
}

function startConfetti() {
    function drawConfetti() {
        ctx.clearRect(0, 0, confetti.width, confetti.height);
        confettiPieces.forEach(p => {
            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2, true);
            ctx.fill();
        });
        updateConfetti();
        requestAnimationFrame(drawConfetti);
    }

    function updateConfetti() {
        confettiPieces.forEach(p => {
            p.y += p.d;
            if (p.y > confetti.height) {
                p.y = 0 - p.r;
                p.x = Math.random() * confetti.width;
            }
        });
    }
    drawConfetti();
}
</script>

